<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".biz.sessions.LauncherPage">

    <TextView
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="#000"
        android:text="Router1" android:textColor="#fff" android:textSize="40dp"
        android:gravity="center"/>


    <Button android:id="@+id/btnLogin"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" android:layout_margin="10dp"
        android:text="login" android:textAllCaps="false"/>


    <Button android:id="@+id/btnHome"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_above="@id/btnLogin" android:layout_margin="10dp"
        android:text="visit now" android:textAllCaps="false"/>

</RelativeLayout>