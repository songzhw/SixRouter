<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View android:id="@+id/viewPlaceHolder35"
            android:layout_width="1dp" android:layout_height="40dp"
            />

        <LinearLayout android:id="@+id/llay1" android:layout_below="@id/viewPlaceHolder35"
            android:layout_width="match_parent" android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn1" android:layout_marginHorizontal="5dp"
                android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                tools:text="prev" android:textAllCaps="false"  android:textSize="16dp"
                />

            <Button
                android:id="@+id/btn2" android:layout_marginHorizontal="5dp"
                android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                tools:text="action" android:textAllCaps="false"  android:textSize="16dp"
                />

            <Button
                android:id="@+id/btn3" android:layout_marginHorizontal="5dp"
                android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                tools:text="next" android:textAllCaps="false"  android:textSize="16dp"
                />
        </LinearLayout>


        <LinearLayout android:id="@+id/llay2" android:layout_below="@id/llay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button android:textSize="15dp"
                android:id="@+id/btn4" android:layout_marginHorizontal="5dp"
                android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                tools:text="prev" android:textAllCaps="false"
                />

            <Button android:textSize="15dp"
                android:id="@+id/btn5" android:layout_marginHorizontal="5dp"
                android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                tools:text="action" android:textAllCaps="false"
                />

            <Button android:textSize="15dp"
                android:id="@+id/btn6" android:layout_marginHorizontal="5dp"
                android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                tools:text="next" android:textAllCaps="false"
                />
        </LinearLayout>

        <LinearLayout android:id="@+id/llay3" android:layout_below="@id/llay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button android:textSize="15dp"
                android:id="@+id/btn7" android:layout_marginHorizontal="5dp"
                android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                tools:text="prev" android:textAllCaps="false"
                />

            <Button android:textSize="15dp"
                android:id="@+id/btn8" android:layout_marginHorizontal="5dp"
                android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                tools:text="action" android:textAllCaps="false"
                />

            <Button android:textSize="15dp"
                android:id="@+id/btn9" android:layout_marginHorizontal="5dp"
                android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
                tools:text="next" android:textAllCaps="false"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTitle" android:layout_below="@id/llay3"
            android:layout_width="match_parent" android:layout_height="100dp"
            android:textSize="25dp" android:textColor="#000"
            android:gravity="center" tools:text="hello world"
            android:lineSpacingExtra="16dp"
            />
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/purple_700" android:layout_below="@+id/tvTitle"/>

        <EditText android:id="@+id/et0"
            android:layout_width="match_parent" android:layout_height="40dp"
            android:layout_below="@+id/tvTitle" android:layout_marginTop="5dp"
            android:hint="please input anything here"
            />
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/purple_700" android:layout_below="@+id/tvTitle"/>
        <TextView
            android:id="@+id/tv1"
            android:layout_below="@+id/et0" android:layout_marginTop="5dp"
            android:layout_width="match_parent" android:layout_height="100dp"
            android:textSize="18dp" android:textColor="#1e1e1e"
            tools:text="hello world1"
            />
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/purple_700" android:layout_below="@+id/tv1"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_below="@+id/tv1" android:layout_marginTop="5dp"
            android:layout_width="match_parent" android:layout_height="100dp"
            android:textSize="18dp" android:textColor="#1e1e1e"
            tools:text="hello world2"
            />
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/purple_700"  android:layout_below="@+id/tv2"/>
        <TextView
            android:id="@+id/tv3"
            android:layout_below="@+id/tv2" android:layout_marginTop="5dp"
            android:layout_width="match_parent" android:layout_height="100dp"
            android:textSize="18dp" android:textColor="#1e1e1e"
            tools:text="hello world3"
            />
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/purple_700" android:layout_below="@+id/tv3"/>

        <TextView
            android:id="@+id/tv4"
            android:layout_below="@+id/tv3" android:layout_marginTop="5dp"
            android:layout_width="match_parent" android:layout_height="100dp"
            android:textSize="18dp" android:textColor="#1e1e1e"
            tools:text="hello world4"
            />
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/purple_700" android:layout_below="@+id/tv4"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab" android:src="@android:drawable/ic_dialog_alert"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:pressedTranslationZ="12dp" app:elevation="6dp"
            app:backgroundTint="@color/black" android:tint="@color/white"
            android:layout_alignBottom="@id/tv3" android:layout_alignRight="@id/tv3"
            android:layout_marginBottom="20dp" android:layout_marginRight="20dp"
            />

    </RelativeLayout>
</ScrollView>